@{
   ViewData["Title"]  = "Cadastro de Usuário";
}

<html>
<head>
    <title>ViaCEP Webservice</title>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />

    <!-- Adicionando JQuery -->
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"
            integrity="sha256-/xUj+3OJU5yExlq6GSYGSHk7tPXikynS7ogEvDej/m4="
            crossorigin="anonymous"></script>


    <style>
        div.flex-content {
            display: flex;
        }

        input {
            border-color: black;
            border-width: 1px;
            color: black;
        }

        label {
            color: black;
        }

        h4.container-black {
            color: black;
        }
    </style>

</head>
<body>
    <div class="container-login">
        <div class="row justify-content-center">
            <div class="col-xl-10 col-lg-12 col-md-9">

                @*<div class="col-md-6">*@
                <div class="card shadow-sm my-5">
                    <div class="card-body p-0">
                        <div class="row">
                            <div class="col-lg-12">
                                <div class="login-form">
                                    <div class="text-center">
                                        <h1 class="h4 text-gray-900 mb-4">Registrar-se</h1>
                                    </div>
                                    <form method="post" enctype="multipart/form-data">
                                        <div class="form-group">
                                            <label>Insira o seu nome</label> <br />
                                            <input style="border-color: black; color: black;" type="text" class="form-control" name="Nome" id="exampleInputFirstName" placeholder="Insira o seu nome">
                                        </div>
                                        <div class="form-group">
                                            <label>Insira o seu username</label> <br />
                                            <input style="border-color: black; color: black;" type="text" class="form-control" name="UserName" id="exampleInputFirstName" placeholder="Insira seu nome de usuário">
                                        </div>
                                        <div class="form-group">
                                            <label>Telefone celular</label>
                                            <input style="border-color: black; color: black;" type="text" class="form-control" name="Telefone" id="exampleInputLastName" placeholder="Insira seu telefone celular">
                                        </div>
                                        <div class="form-group">
                                            <label>Email</label>
                                            <input style="border-color: black; color: black;" type="email" class="form-control" name="Email" id="exampleInputEmail" aria-describedby="emailHelp"
                                                   placeholder="Insira seu endereço de e-mail">
                                        </div>
                                        <div class="form-group">
                                            <label>Senha</label>
                                            <input style="border-color: black; color: black;" type="password" class="form-control" name="Senha" id="exampleInputPassword" placeholder="Senha">
                                        </div>
                                        <div class="form-group">
                                            <label>Repita a senha</label>
                                            <input style="border-color: black; color: black;" type="password" class="form-control" id="exampleInputPasswordRepeat"
                                                   placeholder="Repita a senha">
                                        </div>
                                        <div>
                                            <label>Data de nascimento</label>
                                            <input style="border-color: black; color: black;" type="date" name="DataNascimento" class="form-control">
                                        </div>
                                        <br />
                                        <div>
                                            <label>Gênero</label>
                                            <select style="border-color: black; color: black;" name="Genero" class="form-control">
                                                @{ string[] generos = Enum.GetNames(typeof(Domains.Enums.Genero)); }
                                                @for (int i = 0; i < generos.Length; i++)
                                                {
                                    <option value="@i">
                                        @generos[i].Replace("_", " ")
                                    </option>
}
                                            </select>

                                        </div>
                                        <br />
                                        <label>Escolha sua foto de perfil</label>
                                        <div class="custom-file">
                                            <input type="file" class="custom-file-input" name="Arquivo" id="customFile">
                                            <label style="border-color: black; color: black;" class="custom-file-label" for="customFile">Selecionar foto de perfil</label>
                                        </div>
                                        <br />
                                        <br />
                                        <div style="margin: 2px;">
                                            <label>Selecione suas tags de interesse</label>
                                            <select class="select2-multiple form-control" multiple="multiple" name="Tags" id="Tags">
                                                @foreach (Domains.Tags t in ViewBag.Tags)
                                                {
                                    <option value="@t.ID">@t.Nome</option>}
                                            </select>
                                        </div>
                                        <br />
                                        <hr />
                                        <center> <h4 class="container-black">Endereço</h4></center>
                                        <div class="flex-content">
                                            <div style="margin: 2px;">
                                                <label>CEP</label>
                                                <br />
                                                <input style="border-color: black; color: black;" name="cep" type="number" id="cep" class="form-control" value="" size="11" maxlength="9" placeholder="Digite o CEP" />
                                            </div>
                                            <div style="margin: 2px;">
                                                <label>Rua</label>
                                                <br />
                                                <input style="border-color: black; color: black;" name="Rua" type="text" id="rua" class="form-control" size="85" placeholder="Digite a rua" />
                                            </div>
                                        </div>
                                        <div class="flex-content">
                                            <div style="margin: 2px;">
                                                <br />
                                                <label>Bairro</label>
                                                <br />
                                                <input style="border-color: black; color: black;" name="Bairro" type="text" id="bairro" class="form-control" size="51" placeholder="Digite o bairro" />
                                            </div>
                                            <div style="margin: 2px;">
                                                <br />
                                                <label>Cidade</label>
                                                <br />
                                                <input style="border-color: black; color: black;" name="Cidade" type="text" id="cidade" class="form-control" size="45" placeholder="Digite a cidade" />
                                            </div>
                                        </div>

                                        <div>

                                        </div>
                                        <div class="flex-content">
                                            <div style="margin: 2px;">
                                                <br />
                                                <label>Complemento</label>
                                                <br />
                                                <input style="border-color: black; color: black;" name="Complemento" type="text" size="70" class="form-control" placeholder="Digite o complemento" />
                                            </div>
                                            <div style="margin: 2px;">
                                                <br />
                                                <label>Número</label>
                                                <br />
                                                <input style="border-color: black; color: black;" name="Numero" type="number" size="15" class="form-control" placeholder="Digite o número" />
                                            </div>

                                            <div style="margin: 2px;">
                                                <br />
                                                <label>Estado</label>
                                                <br />
                                                <input style="border-color: black; color: black;" name="uf" type="text" id="uf" size="5" class="form-control" placeholder="UF" />
                                            </div>
                                        </div>

                                        <br />

                                        <br />
                                        <div class="form-group">
                                            <input type="submit" class="btn btn-primary btn-block" value="Registrar">
                                        </div>
                                        <!-- <hr>
    <a href="index.html" class="btn btn-google btn-block">
        <i class="fab fa-google fa-fw"></i> Register with Google
    </a>
    <a href="index.html" class="btn btn-facebook btn-block">
        <i class="fab fa-facebook-f fa-fw"></i> Register with Facebook
    </a> -->

                                    </form>

                                    <hr>
                                    <div class="text-center">
                                        <a class="font-weight-bold small" href="/Usuario/Login">Já possuo uma conta</a>
                                    </div>
                                    <div class="text-center">
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    @section Scripts{
        <script src="~/js/viacep.js"></script>

        <script>
            $(document).ready(function () {
                $('#Tags').select2();
            });

        </script>
    }
</body>
</html>
